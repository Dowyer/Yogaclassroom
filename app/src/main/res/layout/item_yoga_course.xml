<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CardView chứa thông tin khóa học -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/bee_yellow">

            <!-- TextView cho tên khóa học -->
            <TextView
                android:id="@+id/tv_name_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Script"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!-- TextView cho loại khóa học -->
            <TextView
                android:id="@+id/tv_type_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Yoga"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@id/tv_name_course"
                android:layout_marginTop="10dp" />

            <!-- TextView cho giá khóa học -->
            <TextView
                android:id="@+id/tv_price_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : 60$"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@id/tv_type_course"
                android:layout_marginTop="10dp" />

            <!-- LinearLayout chứa hai nút Sửa và Xóa -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:layout_marginBottom="5dp" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- FloatingActionButton ở góc dưới bên phải -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Add"
        android:textColor="@color/black"
/>

</RelativeLayout>
